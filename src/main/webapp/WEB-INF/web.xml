<?xml version='1.0' encoding='utf-8'?>

<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         metadata-complete="false">
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>
                MineMe
            </web-resource-name>
            <url-pattern>/add-event.jsp</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description>
                Only I can add events
            </description>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>admin</role-name>
    </security-role>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/error.jsp</form-error-page>
        </form-login-config>
    </login-config>

    <!-- Insert handle -->
    <servlet-mapping>
        <servlet-name>insertHandler</servlet-name>
        <url-pattern>/insert(</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>insertHandler</servlet-name>
        <servlet-class>servlets.InsertHandler</servlet-class>
    </servlet>

    <!-- Add event page -->
    <servlet-mapping>
        <servlet-name>addEventJsp</servlet-name>
        <url-pattern>/addevent(</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addEventJsp</servlet-name>
        <jsp-file>/add-event.jsp</jsp-file>
    </servlet>

    <!-- Index page -->
    <servlet-mapping>
        <servlet-name>indexPage</servlet-name>
        <url-pattern>/(</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>indexPage</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
</web-app>

